<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Market</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">Market</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="Index">Anasayfa</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Cart" asp-action="Index">
                                <i class="fas fa-shopping-cart"></i> Sepetim
                            </a>
                        </li>
                    </ul>
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Admin" asp-action="Login">
                                <i class="fas fa-user-shield"></i> Admin Girişi
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer">
        <div class="container">
            <div class="row">
                <div class="col-md-4 mb-3 mb-md-0">
                    <h5 class="text-dark mb-3">İletişim Bilgileri</h5>
                    <ul class="list-unstyled">
                        <li class="mb-2">
                            <i class="fas fa-envelope me-2 text-primary"></i>
                            <a href="mailto:atalayy56@gmail.com" class="text-muted text-decoration-none">atalayy56@gmail.com</a>
                        </li>
                        <li class="mb-2">
                            <i class="fas fa-map-marker-alt me-2 text-primary"></i>
                            <span class="text-muted">Ankara, Türkiye</span>
                        </li>
                        <li class="mb-2">
                            <i class="fas fa-phone me-2 text-primary"></i>
                            <a href="tel:+905555555555" class="text-muted text-decoration-none">+90 555 555 55 55</a>
                        </li>
                    </ul>
                </div>
                <div class="col-md-4 mb-3 mb-md-0">
                    <h5 class="text-dark mb-3">Hızlı Linkler</h5>
                    <ul class="list-unstyled">
                        <li class="mb-2">
                            <a href="/" class="text-muted text-decoration-none">
                                <i class="fas fa-chevron-right me-2 text-primary"></i>Anasayfa
                            </a>
                        </li>
                        <li class="mb-2">
                            <a href="/Cart" class="text-muted text-decoration-none">
                                <i class="fas fa-chevron-right me-2 text-primary"></i>Sepetim
                            </a>
                        </li>
                        <li class="mb-2">
                            <a href="#" class="text-muted text-decoration-none">
                                <i class="fas fa-chevron-right me-2 text-primary"></i>Hakkımızda
                            </a>
                        </li>
                    </ul>
                </div>
                <div class="col-md-4">
                    <h5 class="text-dark mb-3">Sosyal Medya</h5>
                    <div class="d-flex gap-3">
                        <a href="#" class="text-muted text-decoration-none fs-5">
                            <i class="fab fa-facebook"></i>
                        </a>
                        <a href="#" class="text-muted text-decoration-none fs-5">
                            <i class="fab fa-twitter"></i>
                        </a>
                        <a href="#" class="text-muted text-decoration-none fs-5">
                            <i class="fab fa-instagram"></i>
                        </a>
                        <a href="https://www.linkedin.com/in/yasin-atalay-016369162/" class="text-muted text-decoration-none fs-5">
                            <i class="fab fa-linkedin"></i>
                        </a>
                    </div>
                    <div class="mt-4">
                        <p class="text-muted mb-0">&copy; @DateTime.Now.Year - Market</p>
                        <small class="text-muted">Tüm hakları saklıdır.</small>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>